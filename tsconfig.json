{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "module": "node16",
    "target": "es2021",
    "jsx": "react-jsx",
    "outDir": "build/",
    "moduleResolution": "node16",
    "baseUrl": "./src",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "noErrorTruncation": true
  },
  "include": ["./src/**/*", "./test/**/*"],
  "exclude": ["./build/**/*"]
}
